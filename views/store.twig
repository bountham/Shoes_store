<!DOCTYPE html>

<html>
  <head>
    <link rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <title>Shoe Store</title>
  </head>
  <body>
    <div class="container">
          <h3>Red Dragon Shoes</h3>
          <p><a href="/">Home</a> &gt; {{ store.getName() }}</p>
          <div class="row">
              <h3>{{ store.getName() }}</h3>
              <form class="" action="/stores" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="hidden" name="delete_store" value="{{ store.getId() }}">

                <button class="caution" type="submit">Delete</button>
              </form>
              <form action="/stores/{{ store.getId() }}" method="post">
                <input type="hidden" name="_method" value="patch">

                <label for="edit_store">Update Name</label>
                <input type="text" name="edit_store" id="edit_store">

                <button class="button-primary" type="submit">Update</button>
              </form>
            </div>
                <h4>{{ store.getName()}} Brands</h4>

              {% if new_brand is not empty %}
                {% for brand in new_brand %}
          <p><a href="/brands/{{ brand.getId() }}">{{ brand.getName() }}</a>                </p>{% endfor %}
          {% endif %}
          <div class="row">
            <h4>All Brands</h4>
            {% if all_brands is not empty %}
              {% for brand in all_brands %}
              <form class="u-pull-right" action="/stores/{{ store.getId() }}" method="post">
                <input type="hidden" name="store_brand" value="{{ brand.getId() }}">
                <button class="button" type="submit">Add</button>
              </form>
              <h5>{{ brand.getName() }}</h5>
              {% endfor %}
            {% endif %}
          </div>
        </div>
    <!-- end container -->
  </body>
</html>
