<!DOCTYPE html>
<html>
    <head>
    <title>Shoe Store</title>
    <link rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    </head>
    <body>
  <div class="container">
    <div class="twelve columns">
      <div class="row header">
        <h2>Welcome Red Dragon Store Front</h2>
      </div>
    </div>

    <div class="row">
      <div class="six columns">
        <div class="row">
    <div class="eight columns">
          <h3>Stores</h3>
    </di>
      <div class="four columns">
      <form class="" action="/" method="post">
           <input type="hidden" name="_method" value="delete">
           <input type="hidden" name="stores" value="delete">
           <button class="caution" type="submit">Clear All</button>
    </form>
      </div>
      <div class="twelve columns">
        <form action="/stores" method="post">
          <label for="add_store">Add a Store</label>
          <input type="text" name="add_store" id="add_store">
          <button class="button-primary" type="submit">Add</button>
        </form>
      </div>
      </div>
      <div class="twelve columns">
          {% if newStore is not empty %}
          {% for store in newStore %}
      <div class="store">
      <p><a href="/stores/{{ store.getId() }}">{{ store.getName() }}</a>          </p>
      </div>
      {% endfor %}
      {% else %}

      <div class="store">
          <p>No stores have been added.</p>
          </div>
          {% endif %}
          </div>
          </div>

    <div class="six columns">
      <div class="row">
      <div class="eight columns">
      <h3>Brands</h3>
    </div>  <div class="four columns">
      <form class="" action="/" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="hidden" name="brands" value="delete">
          <button class="caution" type="submit">Clear All</button>
    </form>
    </div>
    <div class="twelve columns">
      <form class="" action="/brands" method="post">
          <label for="add_brand">Add a Brand</label>
          <input type="text" name="add_brand" id="add_brand">
          <button class="button-primary" type="submit">Add</button>
      </form>
      </div>
      <div class="twelve columns">
          {% if brand_array is not empty %}
          {% for brand in brand_array %}
    <div class="brand">
          <p><a href="/brands/{{ brand.getId() }}">{{ brand.getName() }}</a>
          </p>
    </div>
      {% endfor %}
      {% else %}
      <div class="brand">
          <p>No brands have been added.</p>
          </div>
          {% endif %}
          </div>
          </div>
          </div>
        </div>
    </div>
 </body>
</html>
